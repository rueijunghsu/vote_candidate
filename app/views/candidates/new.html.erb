<h1>新增候選人</h1>

<%= form_for(@candidate) do |f| %>
  <div>
    <%= f.label :name, "姓名"%>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :age, "年齡"%>
    <%= f.text_field :age %>
  </div>

  <div>
    <%= f.label :party, "政黨"%>
    <%= f.text_field :party %>
  </div>
  
  <div>
    <%= f.label :politics, "政見"%>
    <%= f.text_field :politics %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>

<br>

<%= link_to '回到候選人列表', candidates_path %>